<% content_for :header_title do %>
    People
<% end %>

<% content_for :breadcrumb do %>
    <% people_path = link_to 'People', manage_people_path %>
    <%= render "shared/manage_breadcrumb", items: [people_path, @person, 'Profile'] %>
<% end %>

<% content_for :profile_content do %>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel">
                <div class="panel-body">
                    <h3>
                        <div class="float-right">
                            <%= link_to 'Edit', edit_manage_person_path, class: 'btn btn-outline-custom btn-sm' %>
                        </div>
                        Profile
                    </h3>
                    <br>
                    <table class="table">
                        <tr>
                            <th>First name</th>
                            <td><%= @person.first_name %></td>
                        </tr>
                        <tr>
                            <th>Last name</th>
                            <td><%= @person.last_name %></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>
                                <% if @person.email %>
                                    <%= @person.email %>
                                <% else %>
                                    <span style="color: #ccc;">Not set</span>
                                <% end %>
                            </td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>
                                <% if @person.phone %>
                                    <%= @person.phone %>
                                <% else %>
                                    <span style="color: #ccc;">Not set</span>
                                <% end %>
                            </td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td><%= @person.street_address %></td>
                        </tr>
                    </table>
                </div>
            </div>
            <br>
        </div>
        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-body">
                    <h3>
                        Status
                        <small style="font-size: 0.6em;">
                            <span class="badge <%= @person.is_active ? 'badge-success' : 'badge-danger' %>">
                                <%= @person.is_active ? 'Active' : 'Inactive' %>
                            </span>
                        </small>
                    </h3>
                    <br>
                    <dl>
                        <dt>Account status</dt>
                        <dd>
                            <% if @person.active %>
                                <span class="text-success">
                                    <span style="padding-top: 4px;"><%= material_icon.checkmark.style('font-size: 16px;') %></span>
                                    Active
                                </span>
                            <% else %>
                                <span class="badge badge-danger">
                                    Inactive
                                </span>
                            <% end %>
                        </dd>
                        <dt>Email verified</dt>
                        <dd>
                            <% if @person.email_verified_at %>
                                <span class="text-success">
                                    <span style="padding-top: 4px;"><%= material_icon.checkmark.style('font-size: 16px;') %></span>
                                    <%= @person.email_verified_at.strftime('%m/%d/%y') %>
                                </span>
                            <% elsif @person.email == nil %>
                                Email not set
                            <% else %>
                                <span class="badge badge-danger">
                                    Not verified
                                </span>
                            <% end %>
                        </dd>
                        <dt>Account verified</dt>
                        <dd>
                            <% if @person.verified_at %>
                                <span class="text-success">
                                    <span style="padding-top: 4px;"><%= material_icon.checkmark.style('font-size: 16px;') %></span>
                                    <%= @person.verified_at.strftime('%m/%d/%y') %>
                                </span>
                            <% else %>
                                <span class="badge badge-danger">
                                    Not verified
                                </span>
                            <% end %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
<% end %>

<%= render 'manage/people/profile_layout' %>