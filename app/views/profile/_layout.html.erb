<% content_for :page_title do %>
    <%= render "shared/page_title", title: 'My profile' %>
<% end %>

<div class="row">
    <div class="col-sm-4">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
            <%= link_to profile_index_path, :class => 'nav-link ' + (request.path == '/profile' ? 'active' : '') do %>
                <div style="float: left; padding-top: 2px; margin-right: 10px;"><%= material_icon.account_circle.style('font-size: 18px;') %></div>
                Contact Info
            <% end %>
            <%= link_to profile_residents_path, :class => 'nav-link ' + (request.path == '/profile-residents' ? 'active' : '') do %>
                <div style="float: left; padding-top: 2px; margin-right: 10px;"><%= material_icon.home.style('font-size: 18px;') %></div>
                Residents
            <% end %>
            <a class="nav-link" id="v-pills-notifications-tab" data-toggle="pill" href="#notifications" role="tab">
                <div style="float: left; padding-top: 2px; margin-right: 10px;"><%= material_icon.notifications.style('font-size: 18px;') %></div>
                Notifications
            </a>
            <a class="nav-link" id="v-pills-dues-tab" data-toggle="pill" href="#dues" role="tab">
                <div style="float: left; padding-top: 2px; margin-right: 10px;"><%= material_icon.attach_money.style('font-size: 18px;') %></div>
                Dues
            </a>
        </div>
    </div>
    <div class="col-sm-8">
        <%= yield :profile_content %>
    </div>
</div>
