<% content_for :breadcrumb do %>
    <%= render "shared/breadcrumb", items: ['Profile', 'Residents'] %>
<% end %>

<% content_for :profile_content do %>
    <div class="panel">
        <div class="panel-header">
            <div class="float-right">
                <%= link_to edit_profile_path(@user), class: 'btn btn-outline-custom btn-sm' do %>
                    <%= material_icon.create.style('font-size: 16px;') %>
                    Edit
                <% end %>
            </div>
            Residents
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th></th>
            </thead>
            <tbody>
                <% @people.each do |person| %>
                    <tr>
                        <td><%= person %></td>
                        <td><%= person.phone %></td>
                        <td><%= person.email %></td>
                        <td></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>

<%= render 'profile/layout' %>
