<% content_for :page_title do %>
    <%= render "shared/page_title", title: 'People' %>
<% end %>

<% content_for :breadcrumb do %>
    <%= render "shared/breadcrumb", items: ['All People'] %>
<% end %>

<table class="table table-striped table-hover">
    <thead>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th style="width: 1%;"><%= link_to 'Add', new_person_path, class: 'btn btn-outline-primary btn-sm float-right' %></th>
    </thead>
    <% @people.each do |person| %>
        <tr>
            <td><%= person.first_name %></td>
            <td><%= person.last_name %></td>
            <td><%= person.email %></td>
            <td style="width: 1%;">
                <%= link_to person_path(person), class: 'btn btn-outline-secondary btn-xs float-right', style: 'padding: 0px 5px;' do %>
                    <%= material_icon.account_circle.style('font-size: 20px; line-height: inherit;') %>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>
