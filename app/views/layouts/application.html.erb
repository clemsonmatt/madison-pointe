<!DOCTYPE html>
<html>
    <head>
        <title>Madison Pointe HOA</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <% if @user %>
            <div class="header-body">
            <div style="background: rgba(0,0,0,0.3); height: 375px;">
                <nav class="navbar navbar-expand-md">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">Madison Pointe HOA</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <%= link_to 'News', dashboard_index_path, class: 'nav-link' %>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        Directory
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        Resources
                                    </a>
                                </li>
                            </ul>
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item dropdown">
                                    <a href="#" class="nav-link btn btn-custom dropdown-toggle" data-toggle="dropdown">
                                        My Profile
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <%= link_to 'My Profile', profile_index_path, class: 'dropdown-item' %>
                                        <div class="dropdown-divider"></div>
                                        <a href="/logout" class="dropdown-item">Logout</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <%= yield :page_title %>
            </div>
            </div>

            <%= yield :breadcrumb %>

            <div class="container" style="margin-top: 25px;">
                <% flash.each do |key, value| %>
                    <div class="alert alert-<%= key %>">
                        <button type="button" class="close" data-dismiss="alert" style="font-size: 1.8em;">&times;</button>
                        <%= value %>
                    </div>
                <% end %>

                <%= yield %>
            </div>
        <% else %>
            <%= yield %>
        <% end %>
    </body>
</html>
