<!DOCTYPE html>
<html>
    <head>
        <title>Madison Pointe HOA</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <% if @user %>
            <nav class="navbar navbar-expand-md navbar-dark bg-primary">
                <div class="container">
                    <a class="navbar-brand" href="#">Madison Pointe</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <%= link_to 'Home', dashboard_index_path, class: 'nav-link' %>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    Directory
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    Events &amp; Services
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                                    <%= @user %>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <%= link_to 'Profile', person_path(@user), class: 'dropdown-item' %>
                                    <div class="dropdown-divider"></div>
                                    <a href="/logout" class="dropdown-item">Logout</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        <% end %>

        <%= yield :page_title %>
        <%= yield :breadcrumb %>

        <div class="container" style="margin-top: 25px;">
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>">
                    <button type="button" class="close" data-dismiss="alert" style="font-size: 1.8em;">&times;</button>
                    <%= value %>
                </div>
            <% end %>

            <%= yield %>
        </div>
    </body>
</html>
