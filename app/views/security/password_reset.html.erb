<% content_for :form_container do %>
    <div class="panel" style="margin-top: 20px;">
        <div class="panel-body">
            <h2 class="text-center text-mp">Update Password</h2>
            <div style="margin-top: 30px;">
                <%= form_tag security_update_password_path do %>
                    <div class="input-group" style="margin-bottom: 10px;">
                        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
                    </div>
                    <div class="input-group" style="margin-bottom: 10px;">
                        <%= password_field_tag :password_confirm, nil, class: 'form-control', placeholder: 'Confirm password' %>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <button class="btn btn-custom btn-lg btn-block" type="submit" style="margin-top: 10px;">
                            Update password
                        </button>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
<% end %>

<%= render 'security/layout' %>