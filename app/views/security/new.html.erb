<% content_for :form_container do %>
    <%= form_tag security_index_path do %>
        <div class="panel">
            <div class="panel-body">
                <h2 class="text-center text-mp">Create Account</h2>
                <div style="margin-top: 10px;">
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-md-6">
                            <%= text_field_tag :first_name, params[:first_name], class: 'form-control', id: 'js-first_name', placeholder: 'First Name' %>
                        </div>
                        <div class="col-md-6">
                            <%= text_field_tag :last_name, params[:last_name], class: 'form-control', id: 'js-last_name', placeholder: 'Last Name' %>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-md-6">
                            <%= text_field_tag :phone, params[:phone], class: 'form-control', id: 'js-phone', placeholder: 'Phone' %>
                        </div>
                        <div class="col-md-6">
                            <%= select_tag :house_id, options_from_collection_for_select(@houses, :id, :address), prompt: '-- House Number --', class: 'form-control' %>
                        </div>
                    </div>

                    <div class="input-group" style="margin-bottom: 10px;">
                        <%= text_field_tag :email, params[:email], class: 'form-control', id: 'js-email', placeholder: 'Email' %>
                    </div>

                    <div class="input-group" style="margin-bottom: 10px;">
                        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
                    </div>

                    <div class="input-group" style="margin-bottom: 10px;">
                        <%= password_field_tag :password_confirmation, nil, class: 'form-control', placeholder: 'Confirm password' %>
                    </div>
                </div>
                <hr>
                <label>
                    <%= link_to 'Terms & Conditions', asset_path('terms-conditions.pdf'), target: "_blank" %>
                    <%= link_to 'Privacy Policy', asset_path('privacy-policy.pdf'), class: 'float-right', target: "_blank" %>
                    <br>
                    <%= check_box_tag :terms, checked: false, class: 'form-control' %>
                    I have read and agreee to the terms and conditions
                </label>
                <hr>
                <div style="margin-bottom: 10px;">
                    <%= recaptcha_tags %>
                    <button class="btn btn-custom btn-lg btn-block" type="submit" style="margin-top: 10px;">
                        Create account
                    </button>
                </div>
                <hr>
                <%= link_to  "I already have an account", login_path %>
            </div>
        </div>
    <% end %>
<% end %>

<%= render 'security/layout' %>
